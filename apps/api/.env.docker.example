# LinkFlow API - Docker Environment (Laravel-specific config)
# Copy this file: cp .env.docker.example .env.docker
# Used by: docker-compose.yml (env_file: .env.docker)
#
# IMPORTANT: Secrets (DB_PASSWORD, REDIS_PASSWORD, APP_KEY, LINKFLOW_ENGINE_SECRET)
# are injected by docker-compose from root .env — do NOT duplicate them here.

APP_NAME=LinkFlow
APP_ENV=local
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# Database (connection details only — password from root .env)
# ============================================
DB_CONNECTION=pgsql

# ============================================
# Session / Queue / Cache
# ============================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
CACHE_STORE=redis

REDIS_CLIENT=phpredis
REDIS_PORT=6379

# ============================================
# OAuth (Generate after first boot)
# ============================================
# php artisan passport:keys && php artisan passport:client --password
PASSPORT_PASSWORD_CLIENT_ID=019c679d-6b8b-7383-a3de-f302c971baf9
PASSPORT_PASSWORD_CLIENT_SECRET=beOlpE0VdKGUTSvgTdc1cXd0ijroDqZZxJzHCeiu

# ============================================
# Mail (Optional — configure for production)
# ============================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@linkflow.io"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# Storage (Optional — S3 / MinIO)
# ============================================
# FILESYSTEM_DISK=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=linkflow-storage
# AWS_URL=
