# LinkFlow Infrastructure - Environment Variables
# Copy this file: cp .env.example .env
# Used by: infra/docker-compose.yml

# ============================================
# Database (Required)
# ============================================
POSTGRES_USER=linkflow
POSTGRES_PASSWORD=       # REQUIRED: Generate with: openssl rand -base64 24
POSTGRES_DB=linkflow
POSTGRES_PORT=5432

# ============================================
# Redis (Required)
# ============================================
REDIS_PASSWORD=          # REQUIRED: Generate with: openssl rand -base64 24
REDIS_PORT=6379

# ============================================
# Core Secrets (Required)
# ============================================
LINKFLOW_SECRET=         # REQUIRED: Generate with: openssl rand -base64 32
JWT_SECRET=              # REQUIRED: Generate with: openssl rand -base64 32

# ============================================
# SSL Certificates (Production Only)
# ============================================
SSL_CERT_PATH=./nginx/ssl    # Directory containing fullchain.pem and privkey.pem

# ============================================
# External Integrations (Optional via Make infra-up)
# ============================================
# If you run infrastructure independently, add other integration keys here
# if your services depend on them being injected.
#
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# STRIPE_SECRET_KEY=
# ...
